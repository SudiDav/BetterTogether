@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@if (!ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="alert alert-danger"></div>
}
@*<div class="row">
    <div class="col-md-4">*@
    <form class="form" asp-route-returnUrl="@Model.ReturnUrl" method="post"
          style="margin-top:50px; align-content:center; border-radius:5px;">
        <h2 class="form-heading">Please register</h2>
        <label asp-for="Input.Name" class="sr-only" for="inputName">Name</label>
        <input asp-for="Input.Name" class="form-control first" placeholder="Name" autofocus />

        <label asp-for="Input.Email" class="sr-only">Email</label>
        <input asp-for="Input.Email" class="form-control" placeholder="Email"/>

        <label asp-for="Input.PhoneNumber" class="sr-only">Phone Number</label>
        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number"/>

        <label asp-for="Input.Password" class="sr-only">Password</label>
        <input asp-for="Input.Password" class="form-control" placeholder="Password"/>

        <label asp-for="Input.ConfirmPassword" class="sr-only">Confirm Password</label>
        <input asp-for="Input.ConfirmPassword" class="form-control last" placeholder="Confirm Password"/>

        <label asp-for="Input.IsSuperAdmin"></label>
        <input asp-for="Input.IsSuperAdmin" type="checkbox" class="form-control" />
        <br />
        <button id="loginbtn" type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
    </form>
    @*</div>
</div>*@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
