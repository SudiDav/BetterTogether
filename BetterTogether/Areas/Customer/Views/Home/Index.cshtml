@model List<BetterTogether.Models.Products>

<br /><br />

<div class="row">
    @foreach (var product in Model)
    {
       <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:black">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top imageThumbnail" src="@product.ImageUrl" alt="Card Image" asp-append-version="true"/>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-content-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#136ca0"><b>$@product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" 
                           class="btn btn-primary pull-right btn-outline-info"
                           style="color:black;" asp-route-id="@product.Id">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
       </div>
    }
</div>